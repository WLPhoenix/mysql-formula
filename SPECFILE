title: MySQL Salt Formula
description: Salt formula for installing components of MySQl
root_path: mysql
components:
  - title: MySQL Client
    description: Client component of MySQL
    sls_path: mysql.client

  - title: MySQL Server
    description: Server component of MySQL
    sls_path: mysql.server

  - title: MySQL User
    description: User component of MySQL
    sls_path: mysql.user

  - title: MySQL Python
    description: Python Binding component of MySQL
    sls_path: mysql.python

  - title: Remove MySQL Test DB
    description: Deletes the 'test' DB normally created by MySQL
    sls_path: mysql.remove_test_database


pillar_defaults:
  mysql:
	server:
      version: '>=5.5.3'
	client:
      version: '>=5.5.3'